<form class="application standard-form" style="
    background: rgba(10, 8, 7, 0.9);
    border: 1px solid #5e4b35;
    padding: 1.5rem;
    margin-top: 2rem;
    max-width: 450px;
    margin-left: auto;
    margin-right: auto;
    font-family: 'Spectral', serif;
    color: #b0a498;
    position: relative;
    clip-path: polygon(10px 0, 100% 0, 100% calc(100% - 10px), calc(100% - 10px) 100%, 0 100%, 0 10px);
">
    <!-- 标题 -->
    <h2 style="
        font-family: 'Cinzel Decorative', serif;
        font-size: 1.2rem;
        text-align: center;
        color: #8a734b;
        border: none;
        margin-bottom: 1rem;
        border-bottom: 1px solid rgba(138, 115, 75, 0.3);
        padding-bottom: 0.5rem;
    ">{{ localize "GAME.ReturnSetup" }}</h2>

    <div class="form-group" style="margin-bottom: 1rem;">
    {{#if isAdmin }}
        <p class="hint" style="text-align: center; color: #888; font-style: italic;">{{ localize "JOIN.AuthAdmin" }}</p>
    {{else}}
        <div style="display: flex; align-items: center; background: rgba(0,0,0,0.3); padding: 5px; border-bottom: 1px solid #444;">
            <label class="icon" data-tooltip="{{ localize 'SETUP.AdminPasswordLabel' }}" style="flex: 0 0 30px; text-align: center; color: #665;">
                <i class="fas fa-key"></i>
            </label>
            <input type="password" name="adminPassword" value="" placeholder="{{ localize 'SETUP.AdminPasswordLabel' }}" autocomplete="current-password" class="bg3-input" style="
                flex: 1;
                background: transparent;
                border: none;
                color: #ccc;
                font-family: 'Spectral', serif;
                font-size: 1rem;
                outline: none;
            ">
        </div>
    {{/if}}
    </div>

    <footer class="form-footer">
        <button type="submit" class="bg3-btn" style="
            width: 100%;
            padding: 8px;
            background: linear-gradient(180deg, #2a1a1a 0%, #140d0d 100%);
            border: 1px solid #4a3b2a;
            color: #8a734b;
            font-family: 'Cinzel Decorative', serif;
            font-size: 1rem;
            cursor: pointer;
            text-transform: uppercase;
            letter-spacing: 1px;
            transition: all 0.3s ease;
        ">
            <i class="fas fa-lock" style="margin-right: 5px;"></i>
            <label>{{ localize "GAME.ReturnSetup" }}</label>
        </button>
    </footer>
</form>